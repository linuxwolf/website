{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.1.3/",
    "markdown-it-container": "npm:markdown-it-container",
    "markdown-it-footnote": "npm:markdown-it-footnote"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  }
}